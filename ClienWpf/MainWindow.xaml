<Window x:Class="ClienWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="250" ResizeMode="NoResize">
    <StackPanel>
        <ListBox Name="listbox" Margin="5" Height="190"> </ListBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Padding="5" Margin="5" Click="ShowText">Получить файлы</Button>
            <Button Grid.Column="1" Padding="5" Margin="5" Click="DowlandFile">Скачать файл</Button>

    </Grid>
    </StackPanel>
</Window>
